<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="FilterChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textAppearance">@style/FilterChipTextAppearance</item>
        <item name="chipBackgroundColor">@color/filter_chip_background</item>
        <item name="chipEndPadding">@dimen/margin_small</item>
        <item name="chipStartPadding">@dimen/margin_small</item>
        <item name="android:textColor">@color/filter_chip_text</item>
        <item name="android:paddingTop">@dimen/margin_tiny</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
    </style>
    
    <style name="FilterChipTextAppearance">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TranslationTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/separator</item>
        <item name="boxStrokeWidth">@dimen/outline_width</item>
    </style>
</resources>
